<h1>Create a New Profile</h1>

<%= form_for(@owner) do |f| %>

  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> 
  </p>

  <p>
    <%= f.label :city %> <br>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :country %> <br>
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>

  <%= f.submit %>
<% end %>