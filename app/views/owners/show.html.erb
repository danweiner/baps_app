  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<header>
  <h1><%= @owner.name %></h1>
  <% if current_user %>
    <ul class="actions">
      <li><%= link_to "Edit Your Profile", edit_owner_path(@owner), class: "edit" %></li>
      <li><%= link_to "Delete Your Profile", admin_owner_path(@owner), method: :delete, data: { confirm: "Are you sure you want to delete your profile?" }, class: "delete" %></li>
    </ul>
  <% end %>
</header>

<h3>Hometown: <%= @owner.city %></h3>
  <p>Country: <%= @owner.country %></p>
  <p>About me: <%= @owner.description %></p>

<header>
  <h2>BAPS Dogs</h2>
  <% if current_user %>
    <ul class="actions">
      <li><%= link_to "Upload Your Pet's Info", new_owner_pet_path(@owner), class: "new" %></li>
   </ul>
  <% end %>
</header>

<ul id="pets">
  <%= @owner.pets.each do |pet| %>
    <li>
      <!-- This is strange behavior -->
      #<%= pet.id %> -                                                
      <%= link_to pet.name, [@owner, pet] %>
    </li>
  <% end %>
</ul>

<% if @owner.attachment.present? %>
    <h4>Attachment</h4>
    <div class="attachment">
      <p>
        <%= link_to File.basename(@owner.attachment.url),
          @owner.attachment.url %>
          (<%= number_to_human_size(@owner.attachment.size) %>)
      </p>
    </div>
  <% end %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>