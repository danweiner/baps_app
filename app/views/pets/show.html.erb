<div id="pet">
  <header>
    <h1><%= @owner.name %></h1>
  </header>

  <header>
    <h2>Pet Name: <%= @pet.name %></h2>
    <% if current_user %>
      <ul class="actions">
        <li><%= link_to "Edit Pet Info", [:edit, @owner, @pet], class: "edit" %></li>
        <li><%= link_to "Remove Pet", [@owner, @pet], method: :delete, data: { confirm: "Are you sure you want to remove this pet?" }, class: "delete" %></li>
      </ul>
    <% end %>
  </header>

    <ul>
      <li>Age: <%= @pet.age %></li>
      <li>Weight: <%= @pet.weight %> lbs.</li>
      <li>Breed: <%= @pet.breed %></li>
    </ul>

  <%= simple_format(@pet.description) %>

  <% if @pet.attachment.present? %>
    <h4>Attachment</h4>
    <div class="attachment">
      <p>
        <%= link_to File.basename(@pet.attachment.url),
          @pet.attachment.url %>
          (<%= number_to_human_size(@pet.attachment.size) %>)
      </p>
    </div>
  <% end %>
</div>